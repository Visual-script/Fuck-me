-- Zysume Spawner Loading Screen (Aqua Box + Rose Effect + Navy Progress)

local player = game.Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = PlayerGui

-- Background Frame (Glass Aqua Box)
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.6, 0, 0.45, 0) -- bigger box
mainFrame.Position = UDim2.new(0.2, 0, 0.275, 0) -- centered
mainFrame.BackgroundColor3 = Color3.fromRGB(0, 200, 200) -- aqua base
mainFrame.BackgroundTransparency = 0.25
mainFrame.BorderSizePixel = 4
mainFrame.BorderColor3 = Color3.fromRGB(255, 255, 255)
mainFrame.Parent = screenGui

-- Glossy Aqua Gradient
local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(80, 255, 255)),  -- shiny top aqua
	ColorSequenceKeypoint.new(0.5, Color3.fromRGB(0, 180, 180)), -- deeper aqua
	ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 100, 100))    -- darker aqua bottom
}
gradient.Rotation = 90
gradient.Parent = mainFrame

-- Rose Glow Effect (shimmer inside)
local roseEffect = Instance.new("ImageLabel")
roseEffect.Size = UDim2.new(1.2, 0, 1.5, 0)
roseEffect.Position = UDim2.new(-0.1, 0, -0.25, 0)
roseEffect.BackgroundTransparency = 1
roseEffect.Image = "rbxassetid://463633129" -- glowing soft light texture
roseEffect.ImageColor3 = Color3.fromRGB(255, 105, 180) -- rose pink
roseEffect.ImageTransparency = 0.4
roseEffect.ZIndex = 0
roseEffect.Parent = mainFrame

-- Animate Rose Effect (soft scrolling)
task.spawn(function()
	while roseEffect.Parent do
		for i = 0, 1, 0.01 do
			roseEffect.Position = UDim2.new(-0.1, 0, -0.25 + i, 0)
			task.wait(0.05)
		end
	end
end)

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0.15, 0)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "Zysume Spawner"
title.Font = Enum.Font.GothamBold
title.TextSize = 38
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Parent = mainFrame

-- Loading Text
local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(1, 0, 0.25, 0)
loadingText.Position = UDim2.new(0, 0, 0.45, 0)
loadingText.BackgroundTransparency = 1
loadingText.Text = "Loading... 0%"
loadingText.Font = Enum.Font.GothamBlack
loadingText.TextSize = 50
loadingText.TextColor3 = Color3.fromRGB(255, 255, 0) -- yellow
loadingText.TextStrokeTransparency = 0
loadingText.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
loadingText.Parent = mainFrame

-- Info Text
local infoText = Instance.new("TextLabel")
infoText.Size = UDim2.new(1, 0, 0.15, 0)
infoText.Position = UDim2.new(0, 0, 0.68, 0)
infoText.BackgroundTransparency = 1
infoText.Text = "Wait 5 min â€“ Checking data..."
infoText.Font = Enum.Font.GothamBold
infoText.TextSize = 24
infoText.TextColor3 = Color3.fromRGB(230, 230, 230)
infoText.Parent = mainFrame

-- Progress Bar Background
local progressBg = Instance.new("Frame")
progressBg.Size = UDim2.new(0.8, 0, 0.08, 0)
progressBg.Position = UDim2.new(0.1, 0, 0.85, 0)
progressBg.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
progressBg.BackgroundTransparency = 0.4
progressBg.BorderSizePixel = 2
progressBg.BorderColor3 = Color3.fromRGB(255, 255, 255)
progressBg.Parent = mainFrame

-- Progress Bar (Navy Blue)
local progressBar = Instance.new("Frame")
progressBar.Size = UDim2.new(0, 0, 1, 0)
progressBar.BackgroundColor3 = Color3.fromRGB(0, 0, 128) -- navy blue
progressBar.BorderSizePixel = 0
progressBar.Parent = progressBg

-- Fake Loading Progress (5 min = 300 sec)
for i = 1, 100 do
	task.wait(3) -- 100 steps * 3 sec = 300 sec = 5 min
	loadingText.Text = "Loading... " .. i .. "%"
	progressBar.Size = UDim2.new(i/100, 0, 1, 0)
end

-- Remove GUI after finished
screenGui:Destroy()
